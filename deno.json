{
  "name": "@fry69/vite-plugin-localcaddy",
  "version": "0.1.5",
  "exports": "./src/mod.ts",
  "tasks": {
    "test": "deno test --allow-read --allow-write --allow-net",
    "check": "deno fmt --check && deno lint && deno check && deno task test"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1",
    "@std/fmt": "jsr:@std/fmt@^1",
    "@std/path": "jsr:@std/path@^1",
    "vite": "npm:vite@^7"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "exclude": ["vite.config.example.ts"],
  "nodeModulesDir": "none"
}
